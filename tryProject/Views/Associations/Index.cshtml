@model IEnumerable<tryProject.Models.Association>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-action="GroupBy">Association by Cities</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatersTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purposes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityWorks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @foreach (var iner in item.CatersTo)
                {
                    <div>@iner.Name</div>
                }

            </td>
            <td>
                @foreach (var iner in item.Zones)
                {
                    <div>@iner.Name</div>
                }

            </td>
            <td>
                @foreach (var iner in item.Purposes)
                {
                    <div>@iner.Name</div>
                }

            </td>
            <td>
                @foreach (var iner in item.CommunityWorks)
                {
                    <div>@iner.Decscription</div>
                }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
